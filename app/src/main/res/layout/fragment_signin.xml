<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".auth.SigninFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/signimg"
                android:layout_width="@dimen/_320sdp"
                android:layout_height="@dimen/_300sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/grsign"/>
            <ImageView
                android:id="@+id/logoimg"
                android:layout_width="65.00dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_marginTop="13.00dp"
                android:src="@drawable/gmlogo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="13.00dp"
                android:text="Buy Any Grocery Items 24x7"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22.10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Login OR SignUp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16.90sp"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26.00dp"
                android:layout_marginTop="19.50dp"
                app:boxCornerRadiusBottomEnd="16.90dp"
                app:boxCornerRadiusBottomStart="16.90dp"
                app:boxCornerRadiusTopEnd="16.90dp"
                app:endIconMode="clear_text"
                app:boxCornerRadiusTopStart="16.90dp"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Phone No"
                    android:drawableStart="@drawable/phone"
                    android:drawableTint="@color/darkgreen"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btncontinue"
                android:layout_width="match_parent"
                android:layout_height="58.50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="26.00dp"
                android:layout_marginTop="6.50dp"
                android:backgroundTint="#8d99ae"
                android:text="Continue"
                android:textColor="@color/black"
                android:textAllCaps="false"
                app:cornerRadius="10.40dp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>