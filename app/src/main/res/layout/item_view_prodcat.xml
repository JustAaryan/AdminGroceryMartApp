<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="65.00dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3.90dp"
    android:clickable="true"
    android:id="@+id/productcat">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/productcatimg"
            android:layout_width="65.00dp"
            android:layout_height="65.00dp"
            android:scaleType="centerInside"
            android:background="@drawable/item_bg_color"
            android:src="@drawable/baseline_allcat_24"
            />

        <TextView
            android:id="@+id/producttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:maxLines="2"
            android:text="All"
            android:textColor="@color/black"
            android:textSize="13.00sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>